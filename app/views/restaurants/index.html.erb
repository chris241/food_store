
<div id="top" class="starter_container bg">
        <div class="follow_container">
            <div class="col-md-6 col-md-offset-3">
                <h2 class="top-title"> Restaurant</h2></br>
                 <h2 class="white second-title"> <%= search_form_for @q do |f| %>
                <div class="buscar-caja"> 
                <%= f.text_field :name_cont, class:"buscar-txt", placeholder:"Search" %>
